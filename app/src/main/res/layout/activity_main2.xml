        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="36sp"
        android:text="INTERNET PAGE"
        android:id="@+id/tvInternetPage"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="36sp"
        android:text="JSON_GPS PAGE"
        android:id="@+id/tvJSONPage"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="36sp"
        android:text="Fragment PAGE"
        android:id="@+id/tvFragmentPage"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="36sp"
        android:text="ViewPager PAGE"
        android:id="@+id/tvViewPager"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="36sp"
        android:text="WebView"
        android:id="@+id/tvWebView"/>


